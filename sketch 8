function setup() {
  createCanvas(400, 400);
  background(255);
}

function draw() {
  fill(255);
  stroke(0);
  ellipseMode(CENTER);
  ellipse(mouseX, mouseY, 50, 50);
  ellipse(mouseX - 10, mouseY - 10, 5, 5);
  ellipse(mouseX + 10, mouseY - 10, 5, 5);
  arc(mouseX, mouseY + 10, 30, 20, 0, PI);

}

function mousePressed() {
  clear();

}
